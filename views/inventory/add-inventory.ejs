<section class="add-inventory-section">
  <h1>Add New Inventory</h1>
  <%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  <form id="addInventoryForm" action="/inv/add-inventory" method="post">
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        required 
        value="<%= locals.inv_make %>"
        autocomplete="off"
      >
    </div>
    
    <div class="form-group">
      <label for="inv_model">Model</label>
      <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        required 
        value="<%= locals.inv_model %>"
        autocomplete="off"
      >
    </div>
    
    <div class="form-group">
      <label for="inv_year">Year</label>
      <input 
        type="text" 
        id="inv_year" 
        name="inv_year" 
        required 
        pattern="[0-9]{4}"
        title="Please enter a 4-digit year"
        value="<%= locals.inv_year %>"
        autocomplete="off"
      >
    </div>
    
    <div class="form-group">
      <label for="inv_description">Description</label>
      <textarea 
        id="inv_description" 
        name="inv_description" 
        required 
        rows="4"
        autocomplete="off"
      ><%= locals.inv_description %></textarea>
    </div>
    
    <div class="form-group">
      <label for="inv_image">Image Path</label>
      <input 
        type="text" 
        id="inv_image" 
        name="inv_image" 
        required 
        value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"
        autocomplete="off"
      >
      <small>Use /images/vehicles/no-image.png for no image</small>
    </div>
    
    <div class="form-group">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input 
        type="text" 
        id="inv_thumbnail" 
        name="inv_thumbnail" 
        required 
        value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
        autocomplete="off"
      >
      <small>Use /images/vehicles/no-image-tn.png for no thumbnail</small>
    </div>
    
    <div class="form-group">
      <label for="inv_price">Price</label>
      <input 
        type="number" 
        id="inv_price" 
        name="inv_price" 
        required 
        min="0"
        step="0.01"
        value="<%= locals.inv_price %>"
        autocomplete="off"
      >
    </div>
    
    <div class="form-group">
      <label for="inv_miles">Miles</label>
      <input 
        type="number" 
        id="inv_miles" 
        name="inv_miles" 
        required 
        min="0"
        value="<%= locals.inv_miles %>"
        autocomplete="off"
      >
    </div>
    
    <div class="form-group">
      <label for="inv_color">Color</label>
      <input 
        type="text" 
        id="inv_color" 
        name="inv_color" 
        required 
        value="<%= locals.inv_color %>"
        autocomplete="off"
      >
    </div>
    
    <div class="form-group">
      <label for="classification_id">Classification</label>
      <%- classificationList %>
    </div>
    
    <button type="submit" class="btn">Add Inventory</button>
  </form>
  <div class="management-link">
    <a href="/inv/">Back to Inventory Management</a>
  </div>
</section> 