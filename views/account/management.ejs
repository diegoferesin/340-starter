<section class="account-management-section">
  <h1><%= title %></h1>
  <%- messages() %>
  
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <%  }) %>
    </ul>
  <% } %>
  
  <div class="account-content">
    <% if (locals.accountData && locals.accountData.account_type === 'Client') { %>
      <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <% } else if (locals.accountData && (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin')) { %>
      <h2>Welcome <%= locals.accountData.account_firstname %></h2>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Manage Inventory</a></p>
    <% } %>
    
    <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
    <p><a href="/account/favorites">Favorites</a></p>
    <p><a href="/account/logout">Logout</a></p>
  </div>
</section>